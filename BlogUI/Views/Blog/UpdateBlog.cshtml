
@{
    ViewData["Title"] = "Redaktə";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

@model Blog
<div class="container-fluid pt-4 px-4">
	<div class="col-sm-12 col-xl-12">
		<div class="bg-secondary rounded h-100 p-4">
			<form method="post" action="/blog/update/@Model.Id">
				<div>
					<input type="text" class="form-control p-2" placeholder="Mövzu" name="Title" value="@Model.Title">
				</div>
				<span asp-validation-for="Title" class="mb-2 mt-1 text-danger"></span>
				<div class="mt-3">
					<label for="formFile" class="form-label">Kiçik şəkil</label>
					<input class="form-control bg-dark" name="ThumbnailImage" type="file" id="formFile" value="@Model.ThumbnailImage">
				</div>
				<span asp-validation-for="ThumbnailImage" class="mb-2 mt-1 text-danger"></span>
				<div class="mt-3">
					<label for="formFile1" class="form-label">Bloq şəkil</label>
					<input class="form-control bg-dark" name="Image" type="file" id="formFile1" value="@Model.Image">
				</div>
				<span asp-validation-for="Image" class="mb-2 mt-1 text-danger"></span>
				
				<div class="mt-3">
					<select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select mb-3">
					</select>
				</div>
				<span asp-validation-for="CategoryId" class="mb-2 mt-1 text-danger"></span>
				
				<div class="mt-3">
					<textarea class="form-control" rows="10" name="Content" placeholder="Məzmun" style="height: 150px;">@Model.Content</textarea>
				</div>
				<span asp-validation-for="Content" class="mb-2 mt-1 text-danger"></span>
				<div>
					<button type="submit" class="btn btn-primary px-5 mt-3">Redaktə</button>
				</div>
			</form>
		</div>
	</div>
</div>

