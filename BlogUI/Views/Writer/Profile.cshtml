
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
@model Writer
<div class="container-fluid pt-4 px-4">
	<div class="col-sm-12 col-xl-12">
		<div class="bg-secondary rounded h-100 p-4">
			<form method="post" action="/writer/update/@Model.Id" enctype="multipart/form-data">
				<div class="d-flex">
					<div class="col-4 me-2">
						<div class="mt-3">
							<label for="Image" class="form-label">Profil şəkli</label>
							<input class="form-control bg-dark" name="Image" type="file" id="Image">
						</div>
						<span asp-validation-for="Image" class="mb-2 mt-1 text-danger"></span>
					</div>
					<div class="col-8">
						<div>
							<input type="text" class="form-control p-2" placeholder="Ad" name="FirstName">
						</div>
						<span asp-validation-for="FirstName" class="mb-2 mt-1 text-danger"></span>

						<div>
							<input type="text" class="form-control p-2 mt-3" placeholder="Soyad" name="LastName">
						</div>
						<span asp-validation-for="LastName" class="mb-2 mt-1 text-danger"></span>

						<div>
							<input type="email" class="form-control p-2 mt-3" placeholder="Email" name="Email">
						</div>
						<span asp-validation-for="Email" class="mb-2 mt-1 text-danger"></span>
					</div>
				</div>

				<div>
					<input type="submit" id="submit-btn" class="btn btn-primary px-5 mt-5" value="Güncəllə" />
				</div>
			</form>
		</div>
	</div>
</div>

