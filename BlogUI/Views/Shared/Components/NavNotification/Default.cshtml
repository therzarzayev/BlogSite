<div class="nav-item dropdown">
	<a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
		<i class="fa fa-bell me-lg-2"></i>
		<span class="d-none d-lg-inline-flex">Bildirişlər</span>
	</a>
	<div class="dropdown-menu dropdown-menu-end bg-secondary border-0 rounded-0 rounded-bottom m-0">
		@{
			DateTime date = new DateTime(2023, 5, 1, 19, 11, 0);
			TimeSpan timeSince = DateTime.Now - date;
			int secondsSince = (int)timeSince.TotalSeconds;

			if (secondsSince >= 86400)
			{
				Console.WriteLine(date.ToString("s MMM, yyyy"));
			}
			else
			{
				int hoursSince = secondsSince / 3600;

				if (hoursSince != 0)
				{
					Console.WriteLine($"{hoursSince} saat əvvəl");
				}
				else
				{
					int minutesSince = secondsSince / 60;

					if (minutesSince != 0)
					{
						Console.WriteLine($"{minutesSince} dəqiqə əvvəl");
					}
					else
					{
						Console.WriteLine($"İndicə");
					}
				}
			}
		}
		<a href="#" class="dropdown-item">
			<h6 class="fw-normal mb-0">Profile updated</h6>
			<small>15 minutes ago</small>
		</a>
		<hr class="dropdown-divider">
		<a href="/writer/notifications" class="dropdown-item text-center">Bütün bildirişləri gör</a>
	</div>
</div>
